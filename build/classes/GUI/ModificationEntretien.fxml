<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="modifVB" prefHeight="91.0" prefWidth="605.0" style="-fx-background-color: #0E1947;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.ModificationEntretienController">
   <children>
      <VBox prefHeight="91.0" prefWidth="195.0">
         <children>
            <Label text="Modifer votre entretien" textFill="WHITE">
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin>
            </Label>
            <Label text="Date:" textFill="WHITE">
               <VBox.margin>
                  <Insets bottom="3.0" left="20.0" top="5.0" />
               </VBox.margin>
            </Label>
            <DatePicker fx:id="dateDP" prefHeight="25.0" prefWidth="153.0">
               <VBox.margin>
                  <Insets left="20.0" top="5.0" />
               </VBox.margin>
            </DatePicker>
         </children>
      </VBox>
      <VBox prefHeight="91.0" prefWidth="146.0">
         <children>
            <Label text="Horaire" textFill="WHITE">
               <VBox.margin>
                  <Insets left="20.0" top="20.0" />
               </VBox.margin>
            </Label>
            <HBox prefHeight="35.0" prefWidth="168.0" spacing="3.0">
               <children>
                  <Spinner fx:id="hourSpinner" editable="true" prefWidth="50">
                     <HBox.margin>
                        <Insets top="10.0" />
                     </HBox.margin>
                  </Spinner>
                  <Label text=":">
                     <HBox.margin>
                        <Insets top="5.0" />
                     </HBox.margin>
                  </Label>
                  <Spinner fx:id="minuteSpinner" editable="true" prefWidth="50.0">
                     <HBox.margin>
                        <Insets top="10.0" />
                     </HBox.margin>
                  </Spinner>
               </children>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
      <VBox prefHeight="91.0" prefWidth="173.0">
         <children>
            <Label text="Lieu" textFill="WHITE">
               <VBox.margin>
                  <Insets left="15.0" top="20.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="lieuTF" prefHeight="25.0" prefWidth="181.0">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
         </children>
      </VBox>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Button fx:id="enregistrerBtn" mnemonicParsing="false" onAction="#modifierEnt" text="Enregistrer">
               <VBox.margin>
                  <Insets left="10.0" top="45.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</HBox>
